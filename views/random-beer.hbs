<!--image, name, description, tagline, food pairing and brewer tips.-->

<div class="container">
    <h1>Random Beers</h1><br>
    <div class="row">
        {{#each beersFromApi}}
        <div class="col-md-2 beer">
            <img class="card-img-top" src={{image_url}} alt="images" />
        </div>
        <div class="col-md-10">
                    <h2 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <h4 class="card-text">{{tagline}}</h4>
                    <ul>{{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                    </ul>
                    <p class="card-text">{{brewers_tips}}</p>
        </div>
    </div>
        
        {{/each}}
</div>
